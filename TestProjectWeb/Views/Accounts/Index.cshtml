@model IEnumerable<TestProjectWeb.Models.Account>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cards</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-lg"> Create New</i>
            </a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Name)
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>

                        <a asp-action="Details" asp-route-id="@item.Id"
                        class="btn btn-info mx-2"> <i class="bi bi-info"></i>Info</a>

                        <a asp-action="Put" asp-route-id="@item.Id"
                        class="btn btn-warning mx-2"> <i class="bi bi-arrow-bar-up"></i>Put</a>

                        <a asp-action="Withdraw" asp-route-id="@item.Id"
                        class="btn btn-warning mx-2"> <i class="bi bi-arrow-bar-down"></i>Cash</a>

                        <a asp-controller="History" asp-action="OpenAccountHistory" asp-route-id="@item.Id"
                        class="btn btn-info mx-2"> <i class="bi bi-clock-history"></i>History</a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
