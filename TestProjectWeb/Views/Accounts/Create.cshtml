@model TestProjectWeb.Models.Account

@{
    ViewData["Title"] = "Create";
}

<div class="row pb-2">
    <h2 class="text-primary">Create Card</h2>
    <hr />
</div>
<div class="row">
    <div class="border p-3 mt-4" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccNumber" class="control-label"></label>
                <input asp-for="AccNumber" class="form-control" value="@ViewBag.AccNumber"/>
                <span asp-validation-for="AccNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label"></label>
                <input asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" class ="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <br>
            <div class="form-group">
                @*<input type="submit" value="Create" class="btn btn-primary" />*@
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
          @*      <a asp-action="Index" class="btn btn-secondary" style="width:150px" >
                    Back to List
                </a>*@
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

