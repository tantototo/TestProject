@model TestProjectWeb.Models.Account

@{
    ViewData["Title"] = "Withdraw";
}

<h1>Withdraw</h1>

<hr />
<div class="row">
    <div class="border p-3 mt-4">
        <form asp-action="Withdraw">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AccNumber" class="control-label"></label>
                <input asp-for="AccNumber" readonly class="form-control" />
                <span asp-validation-for="AccNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Operation" class="control-label">Operation</label>
                @*<select name="Operations" class ="form-control" asp-items="@ViewBag.Operation" ></select>*@
                <input name="Operation" readonly class="form-control" value="@ViewBag.Operation"/>
            </div>
            <div class="form-group">
                <label name="sum" class="control-label">Sum</label>
                <input name="sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>

            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
@*                <a asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to List
                </a>*@
            </div>
        </form>
    </div>
</div>


